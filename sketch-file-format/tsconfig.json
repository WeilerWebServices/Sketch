{
  "include": ["src/*.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  }
}
